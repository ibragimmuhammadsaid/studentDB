{% extends 'base.html.twig' %}

{% block title %}Contact Information{% endblock %}

{% block body %}
<main class="flex flex-col items-center h-screen">

    <img class="max-w-[200px] max-h-[200px] md:max-h-[200px] m-20" 
        src="{{ asset('images/contacts.png') }}"
        alt="contacts logo">

    <div class="flex justify-between">
    <div class="mr-7 mb-5">
        <img class="max-w-[200px] max-h-[50px] md:max-h-[50px]" 
        src="{{ asset('images/phone.png') }}"
        alt="phone logo">
    </div>

    <div class="text-[32px] font-semibold mb-5">
        <h1 class="text-3xl"> {{ mobile }} </h1>
    </div>
    </div>

    <div class="flex justify-between">
    <div class="mr-7 mb-5">
        <img class="max-w-[200px] max-h-[50px] md:max-h-[50px]" 
        src="{{ asset('images/email.png') }}"
        alt="email logo">
    </div>

    <div class="text-[32px] font-semibold mb-5">
        <h1 class="text-3xl"> {{ email }} </h1>
    </div>
    </div>

    <div class="flex justify-between">
    <div class="mr-7 mb-5">
        <img class="max-w-[200px] max-h-[50px] md:max-h-[50px]" 
        src="{{ asset('images/operator.png') }}"
        alt="workhours logo">
    </div>

    <div class="text-[32px] font-semibold mb-5">
        <h1 class="text-3xl"> {{ hours }} </h1>
    </div>
    </div>

</main>
{% endblock %}