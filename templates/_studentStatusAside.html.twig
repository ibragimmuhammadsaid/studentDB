<aside
            class="pb-8 lg:pb-0 lg:w-[411px] shrink-0 lg:block lg:min-h-screen text-white transition-all overflow-hidden px-8 border-b lg:border-b-0 lg:border-r border-white/20 transition-all overflow-hidden" 
            data-controller="closeable">
            <div class="flex justify-between mt-11 mb-7">
                <h2 class="text-[32px] font-semibold"> Coursemates </h2>
                <button data-action="closeable#close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 448 512"><path fill="#fff" d="M384 96c0-17.7 14.3-32 32-32s32 14.3 32 32V416c0 17.7-14.3 32-32 32s-32-14.3-32-32V96zM9.4 278.6c-12.5-12.5-12.5-32.8 0-45.3l128-128c12.5-12.5 32.8-12.5 45.3 0s12.5 32.8 0 45.3L109.3 224 288 224c17.7 0 32 14.3 32 32s-14.3 32-32 32l-178.7 0 73.4 73.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0l-128-128z"/></svg>
                </button>
            </div>

            {% for student in info %}
            <div class="rounded-2xl pl-5 py-5 pr-11 flex flex-col min-[1174px]:flex-row min-[1174px]:justify-between bg-sky-500">
                <div class="flex flex-col space-y-1.5">
                    <div class="rounded-2xl py-1 px-3 flex justify-center w-32 items-center" style="background: rgba(85, 84, 81, 0.1);">
                        {% if student.studying() %}
                            <div class="rounded-full h-2 w-2 blur-[1px] mr-2 bg-green-400"></div>
                        {% elseif student.notStudying() %}
                            <div class="rounded-full h-2 w-2 blur-[1px] mr-2 bg-red-500"></div>
                        {% else %}
                            <div class="rounded-full h-2 w-2 blur-[1px] mr-2 bg-amber-400"></div>
                        {% endif %}
                        <p class="uppercase text-xs"> {{ student.statusToString }} </p>
                    </div>
                    <h3 class="tracking-tight text-[22px] font-semibold">
                        <a class="hover:underline" href="{{ path('students_show', {
                            id: student.id
                        }) }}">{{ student.getName }}</a>
                    </h3>
                </div>
                <div class="flex mt-4">
                    <div class="border-r border-white/20 pr-8">
                        <p class="text-slate-400 text-xs">ID</p>
                        <p class="text-xl">{{ student.getID }}</p>
                    </div>

                    <div class="pl-8">
                        <p class="text-slate-400 text-xs">Year</p>
                        <p class="text-xl">{{ student.getYear }}</p>
                    </div>
                </div>
            </div>
            <br><br>
            {% endfor %}
        </aside>