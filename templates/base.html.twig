<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        {% endblock %}  

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="text-white" style="background: radial-gradient(102.21% 102.21% at 50% 28.75%,rgba(6, 16, 158, 0.67) 42.62%,rgba(0, 0, 0, 0.74) 100%);">
        <div class="flex flex-col justify-between min-h-screen relative">
            <div>
                <header class="h-[114px] shrink-0 flex flex-col sm:flex-row items-center sm:justify-between py-4 sm:py-0 px-6 border-b border-white/20 shadow-md">
                    <a href="{{ path('app_homepage') }}">
                        <img class="h-[42px]" src="{{ asset('images/education.png') }}" alt="education logo">
                    </a>

                     <a href={{ path('app_homepage') }}> <h1 class="text-4xl h-[42] flex space-x-1 font-semibold"> Student Database </h1> </a>

                     <!-- Weather API Implementation -->
                     {{ render(controller('App\\Controller\\WeatherController::showWeather')) }}

            <!-- Website Navigation -->
                    <nav class="flex space-x-4 font-semibold"> 
                        <a class="hover:text-amber-400 pt-2" href="{{ path('app_homepage') }}">
                            Home
                        </a>
                        <a class="hover:text-amber-400  pt-2" href="{{ path('app_about') }}">
                            About
                        </a>
                        <a class="hover:text-amber-400  pt-2" href="{{ path('app_contacts') }}">
                            Contact
                        </a>
                        <a class="rounded-[60px] py-2 px-5 bg-white/10 hover:bg-white/20" href="{{ path('app_homepage') }}">
                            Get Started
                        </a>
                        <a class="rounded-[60px] py-2 px-5 hover:bg-white/20" href="{{ path('app_homepage') }}">
                            220299
                        </a>
                    </nav>
                </header>
                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>